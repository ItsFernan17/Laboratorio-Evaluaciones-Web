---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { Navbar } from '../components/Navbar'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-[#f7f7f7]">
        <div id="page" class="relative h-screen">
            <header class="[grid-area:header] flex">
                <Navbar client:load/>
            </header>
            <main class="[grid-area:main]  mt-5 mr-32 ml-32">
               <div class="bg-white">
                    <div class="w-full flex justify-center">
                        <div class="w-4/5 mx-auto bg-white p-6 shadow rounded-lg">
                            <slot />
                        </div>
                    </div>                  
                </div>
            </main>
        </div>
	</body>
</html>

<style>
#page {
    display: grid;
    grid-template-areas: 
        "header"
        "main";
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
    height: 100vh;
}

</style>